{
    "manifest_version":2,
    "name":"Spigot Notifier",
    "description":"Get SpigotMc.org notifications in chrome.",
    "version":"1.4",
    "icons":{
        "32":"icon32.png",
        "48":"icon48.png",
        "128":"icon128.png",
        "512":"icon512.png"
    },
    "browser_action":{
        "default_popup":"popup.html"
    },
    "content_scripts":[
        {
            "js":[
                "jquery.js"
            ],
            "matches":[
                "http://*/*",
                "https://*/*"
            ]
        }
    ],
    "background":{
        "page":"background.html"
    },
    "permissions":[
        "activeTab",
        "notifications",
        "storage",
        "tabs"
    ]
}
